{
    "additional-repositories": [],
    "archinstall-language": "English",
    "audio_config": {"audio": "pipewire"},
    "bootloader": "Grub",
    "config_version": "0.0.3"
    "debug": false,
    "disk_config": {
        "config_type": "manual_partitioning",
        "device_modifications": [
            {
                "device": "/dev/sda",
                "partitions": [
                    {
                        "flags": ["Boot"],
                        "fs_type": "fat32",
                        "mountpoint": "/boot",
                        "size": {
                            "unit": "MiB",
                            "value": 512
                        },
                        "status": "create",
                        "type": "primary"
                        },    
                    {
                        "flags": [],
                        "fs_type": "ext4", // or another filesystem of your choice
                        "mountpoint": "/",  // assuming this is the root partition
                        "size": "fill",     // this will use the rest of the space
                        "status": "create",
                        "type": "primary"
                    },
                ],
                "wipe": true
            }
        ]
    },
    "hostname": "a",
    "kernels": [
        "linux"
    ],
    "keyboard-layout": "us",
    "mirror-region": {
        "Australia": {
            "http://archlinux.mirror.digitalpacific.com.au/$repo/os/$arch": true,
        }
    },
    "nic": {
        "dhcp": true,
        "dns": null,
        "gateway": null,
        "iface": null,
        "ip": null,
        "type": "nm"
    },
    "no_pkg_lookups": false,
    "ntp": true,
    "offline": false,
    "packages": [
        "zsh",
        "tmux",
        "hyperland",
        "python3",
        "git"
    ],
    "parallel downloads": 0,
    "script": "guided",
    "silent": false,
    "swap": true,
    "sys-encoding": "utf-8",
    "sys-language": "en_US",
    "timezone": "UTC",
    "version": "2.7.1"
}
